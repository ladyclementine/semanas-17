<section class="content-header">
    <h1>
      Configurações do responsável
    <small></small>
    </h1>
</section>
<%= form_for @config, url: {action: "update"} do |f| %>
<% if @config.errors.any? %>
<script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@config.errors.count, "error") %> encontrados: </br><ul><% @config.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
   });
</script>
<% end %>
 <!-- Main content -->

<section class="content">
   <div class="box box-primary">

      <div class="box-header with-border">
         <h3 class="box-title">Informações necessárias</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->

      <div class="box-body">
         <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Nome da Semana</label>
                  <%= f.text_field :name, :id => 'name', placeholder: '', class: 'form-control', autofocus: true%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->

      <div class="col-md-6">
         <div class="form-group">
           <label>Sigla da Semana</label>
            <%= f.text_area :sigla, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <label>Local da semana</label>
            <%= f.text_area :local, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <label>Link do FAQ da semana</label>
            <%= f.text_area :faq, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <label>Conta do beneficiado</label>
            <%= f.text_area :conta, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <label>Agencia</label>
            <%= f.text_area :agencia, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <label>Nome do beneficiado</label>
            <%= f.text_area :beneficiado, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <label>Banco</label>
            <%= f.text_area :banco, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>

      <div class="col-md-6">
         <div class="form-group">
           <label>Email do beneficiado</label>
            <%= f.text_area :email, placeholder: '', class: 'form-control'%>
         </div>
         <!-- /.form-group -->
      </div>
      <div class="col-md-6">
         <div class="form-group">
            <label>Logo da semana</label>
            <%#= f.text_field :limit, class: 'form-control'%>
            <%= f.file_field :logo, class:"dropify"%>
         </div>
         <!-- /.form-group -->
      </div>
   <!-- /.box -->
   <div class="col-md-6">
      <div class="form-group">
         <label>Fechar inscrições?</label>
         <%#= f.text_field :limit, class: 'form-control'%>
         <%= f.check_box :close, {}, "true", "false" %>
      </div>
      <!-- /.form-group -->
   </div>
<!-- /.box -->

  </div>
</div>
<!-- /.row -->
   <div class="box box-success">
      <div class="box-header with-border">
         <button type="submit" class="btn btn-block btn-success">SALVAR</button>
         <div class="box-tools pull-right">
         </div>
      </div>
   </div>
   <!-- /.box -->
</section>
         <% end %>
