<%=@resultado %>

<section class="content-header">
    <h1>
      Troca de Vaga
    <small></small>
    </h1>
</section>


<section class="content">
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Venda/Compra de Vaga</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Email do Vendedor</label>
                  <%= text_field :vendedor, :email, class: 'form-control', autofocus: true%>
               </div>
               <!-- /.form-group -->
               <div class="form-group">
                  <label>Email do Comprador</label>
                  <%= text_field :comprador, :email, class: 'form-control' %>
               </div>
               <!-- /.form-group -->
               <button type="submit" class="btn btn-info send_troca_vaga">TROCAR VAGA</button>
               <hr>
               <div id="resultado" style="color: #22aa5f"></div>
            </div>
         </div>
         
      </div>
      <!-- /.box-body -->
   </div>

</section>

<%= javascript_include_tag 'crew/trocar_vaga.js' %>