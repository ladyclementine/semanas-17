<section class="content-header">
    <h1>
      Editar Hotel
    <small></small>
    </h1>
</section>
<%= form_for @hotel, url: {action: "update"} do |f| %>

 <!-- Main content -->

<section class="content">
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Configurações do Hotel</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Nome</label>
                  <%= f.text_field :name, :id => 'name', placeholder: '', class: 'form-control', autofocus: true%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
       		<div class="col-md-12">
               <div class="form-group">
                  <label>Informação extra</label>
                  <%= f.text_area :extra_info, class: 'form-control' %>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /.box-body -->
   </div>
   <!-- /.box -->
   <div class="box box-success">
      <div class="box-header with-border">
         <button type="submit" class="btn btn-block btn-success">EDITAR</button>
         <%= link_to "VOLTAR", crew_hotels_path, class:"btn btn-block btn-default" %>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
   </div>
   <!-- /.box -->
</section>
         <% end %>