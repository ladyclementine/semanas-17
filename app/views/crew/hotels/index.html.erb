<section class="content-header">
   <h1>
      Hoteis
   </h1>
</section>
<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">
               <h3 class="box-title">Gerenciamento de Hoteis</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
             <table id="table_ecej" class="table table-striped table-bordered dt-responsive nowrap display"  cellspacing="0" width="100%">
                  <thead>
                     <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Total de vagas</th>
                        <th>Vagas restantes</th>
                        <th class="noExport">Opções</th>
                     </tr>
                  </thead>
                  <tbody>
                  
                     <% @hotels.each do |hotel| %>
                     <tr>
                        <td><%= hotel.id %></td>
                        <td><%= hotel.name %></td>
                        <td><%= hotel.capacity %></td>
                        <td><%= hotel.restant_capacity %></td>

                        <td>
                           <%= link_to edit_crew_hotel_path(hotel) do %>
                           <small class="btn btn-default dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Editar
                           </small>
                           <% end %>

                           <%= link_to crew_hotel_users_path(hotel) do %>
                           <small class="btn btn-info dropdown-toggle btn-xs">
                           <i class="fa fa-eye"></i> Ver Congressistas
                           </small>
                           <% end %>

                        </td>
                     </tr>
                     <% end %> 
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->
</section>