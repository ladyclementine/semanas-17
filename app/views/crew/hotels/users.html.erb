<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">
               <h3 class="box-title">Lista de usuários do hotel <%=@hotel.name%> </h3>
               <%= link_to crew_hotels_path, class: "btn btn-app pull-right" do %>
                <i class="fa fa-repeat"></i> Voltar
               <% end %>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table_ecej_rooms" class="table table-striped table-bordered dt-responsive nowrap display"  cellspacing="0" width="100%">
                  <thead>
                     <tr>
                        <th>Nome</th>
                        <th>Quarto</th>
                        <th hidden="">Quarto</th>
                        <th>Email</th>
                        <th>Descrição</th>
                        <th class="noExport">Login</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @hotel.rooms.each do |r| %>
                     <% r.users.each do |users| %>
                     <tr>
                        <td><%= users.name.nil? ? 'Não Informado' : users.name.titleize%></td>
                        <td>Número <%= r.number %></td>
                        <td hidden=""><%= r.number %></td>
                        <td><%= users.email%></td>

                        <td><%= r.extra_info %></td>
                        <td> <%= link_to crew_login_user_path(users), target: "_blank", method: :patch do %><button type="button" class="btn btn-block btn-warning btn-sm">Login</button> <% end %>
                      </td>
                     </tr>
                     <% end %>
                     <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->
</section>

