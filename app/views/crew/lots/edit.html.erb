<section class="content-header">
    <h1>
      Editar Lote
    <small></small>
    </h1>
</section>
<%= form_for @lot, url: {action: "update"} do |f| %>
<% if @lot.errors.any? %>
<script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@lot.errors.count, "error") %> encontrados: </br><ul><% @lot.errors.each do |attr,message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
   });
</script>
<% end %>
 <!-- Main content -->

<section class="content">
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Configurações do lote</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Nome</label>
                  <%= f.text_field :name, :id => 'name', placeholder: '', class: 'form-control', autofocus: true%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
               <div class="form-group">
                  <label>Valor para federados </label>
                  <%= f.text_field :value_federated, class: 'form-control' %>
               </div>
               <div class="form-group">
                  <label>Data de início</label>
                  <%= f.text_field :start_date, class: 'form-control', id: 'lots_picker' %>
               </div>
               <!-- /.form-group -->
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
               <div class="form-group">
                  <label>Valor para não federados/Pós-Jr. </label><small>* Com Hospedagem</small>
                  <%= f.text_field :value_not_federated, :id => 'name', placeholder: '', class: 'form-control'%>
               </div>
               <!-- /.form-group -->
               <div class="form-group">
                  <label>Data de término</label>
                  <%= f.text_field :end_date, class: 'form-control', id: 'lots_picker1'%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
               <div class="form-group">
                  <label>Número</label>
                  <%= f.text_field :number, placeholder: '', class: 'form-control'%>
               </div>
               <!-- /.form-group -->
            </div>
            <div class="col-md-6">
               <div class="form-group">
                  <label>Limite</label>
                  <%= f.text_field :limit, class: 'form-control'%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
         </div>
         <div class="row">
            <div class="col-md-12">
               <h4>Módulo Sem Hospegem <br><small>* Permite o congressita comprar o ingresso sem a hospedagem.</small></h4>

               <div class="form-group">
                  <div class="radio">
                    <label>
                     <%= f.radio_button(:nohost_active, true) %>
                      Ativo
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <%= f.radio_button(:nohost_active, false) %>
                      Inativo
                    </label>
                  </div>
                </div>

            </div>
            <div class="col-md-6">
               <div class="form-group">
                  <label>Valor para federados </label>
                  <%= f.text_field :value_federated_nohost, class: 'form-control' %>
               </div>
            </div>
            <div class="col-md-6">
               <div class="form-group">
                  <label>Valor para não federados/Pós-Jr. </label>
                  <%= f.text_field :value_not_federated_nohost, :id => 'name', placeholder: '', class: 'form-control'%>
               </div>
            </div>
         </div>
         <!-- /.row -->
      </div>
      <!-- /.box-body -->
   </div>
   <!-- /.box -->
   <div class="box box-success">
      <div class="box-header with-border">
         <button type="submit" class="btn btn-block btn-success">SALVAR</button>
         <%= link_to "VOLTAR", crew_lots_path, class:"btn btn-block btn-default" %>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
   </div>
   <!-- /.box -->
</section>
         <% end %>