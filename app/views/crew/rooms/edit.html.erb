<section class="content-header">
    <h1>
      Editar Quarto <%=@room.number%>
    <small></small>
    </h1>
</section>
<%= form_for @room, url: {action: "update"} do |f| %>
<% if @room.errors.any? %>
<script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@room.errors.count, "error") %> encontrados: </br><ul><% @room.errors.each do |attr,message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
   });
</script>
<% end %>
 <!-- Main content -->

<section class="content">
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Configurações do quarto</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Número</label>
                  <%= f.number_field :number, class: 'form-control', autofocus: true%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
       		<div class="col-md-12">
               <div class="form-group">
                  <label>Informação extra</label>
                  <%= f.text_field :extra_info, class: 'form-control' %>
               </div>
               <!-- /.form-group -->
            </div>
            <div class="col-md-12">
               <div class="form-group">
                  <label>Capacidade</label>
                  <%= f.number_field :capacity, class: 'form-control' %>
               </div>
               <!-- /.form-group -->
            </div>
            <div class="col-md-12">
               <div class="form-group">
                  <label>Hotel</label>
                  <%= f.select(:hotel_id, Hotel.all.order("id").collect{|h| [ h.name, h.id ]}, {}, {class: 'form-control'}) %>
               </div>
               <!-- /.form-group -->
            </div>
            <div class="col-md-12">
               <div class="form-group">
                  <label>Ventilação</label>
                  <%= f.select(:air,{"Ar Condicionado"=>true,"Ventilador"=>false}, {}, {class: 'form-control'}) %>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /.box-body -->
   </div>
   <!-- /.box -->
   <div class="box box-success">
      <div class="box-header with-border">
         <button type="submit" class="btn btn-block btn-success">EDITAR</button>
         <%= link_to "VOLTAR", crew_rooms_path, class:"btn btn-block btn-default" %>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
   </div>
   <!-- /.box -->
</section>
         <% end %>