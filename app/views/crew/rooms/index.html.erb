<section class="content-header">
   <h1>
      Quartos
   </h1>
</section>
<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">	
            	<%= link_to "NOVO QUARTO", new_crew_room_path, class:"btn btn-info pull-right" %>
               <h3 class="box-title">Gerenciamento de Quartos</h3>
            </div>

         
     

            <!-- /.box-header -->
            <div class="box-body">
             <table id="table_ecej_rooms" class="table table-striped table-bordered dt-responsive nowrap display"  cellspacing="0" width="100%">
                  <thead>
                     <tr>
                        <th>Número</th>
                        <th>Hotel</th>
                        <th hidden="">Hotel</th>
                        <th>Info</th>
                        <th>Capacidade</th>
                        <th>Ventilação</th>
                        <th class="noExport">Opções</th>
                     </tr>
                  </thead>
                  <tbody>
                  
                     <% @rooms.each do |room| %>
                     <tr>
                        <td><%= room.number %></td>
                        <td><%= room.hotel.name %> - Capacidade: <%= room.hotel.capacity %> congressitas</td>
                        <td hidden=""><%= room.hotel.name %></td>
                        <td><%= room.extra_info %></td>
                        <td><%= room.users.count %>/<%= room.capacity %></td>
                        <td><%= room.air == true ? 'Ar Condicionado' : 'Ventilador' %></td>
                        <td>
                        	<%= link_to crew_room_path(room) do %>
                           <small class="btn btn-info dropdown-toggle btn-xs">
                           <i class="fa fa-eye"></i> Ver Congressistas
                           </small>
                           <% end %>
                           <%= link_to edit_crew_room_path(room) do %>
                           <small class="btn btn-default dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Editar
                           </small>
                           <% end %>
                           <%= link_to crew_room_path(room), method: :delete, data: { confirm: "Deseja realmente apagar este quarto e seus Congressistas alocados?" } do %>
                           <small class="btn btn-danger dropdown-toggle btn-xs">
                           <i class="fa fa-pencil-square-o"></i> Excluir
                           </small>
                           <% end %>

                        </td>
                     </tr>
                     <% end %> 
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->
</section>