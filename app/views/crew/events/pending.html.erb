<section class="content-header">
   <h1>
      Pendentes
   </h1>
</section>
<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">
               <h3 class="box-title">Usuários que não selecionaram programação em cada horário (Em teste)</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
    			<% @days.each_with_index do |event, index| %>
                        <div class="panel box box-primary">
                           <div class="box-header with-border">
                              <h4 class="box-title">
                                 <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%=index%>">
                                 Dia <%=event[:date].strftime('%d/%m')  %>
                                 </a>
                              </h4>
                           </div>
                           <div id="collapse<%=index%>" class="panel-collapse collapse">
                              <div class="box-body">
                                 <!-- The timeline -->
                                 <ul class="timeline timeline-inverse">
                                
                                    <!-- timeline time label -->
                                    <% event[:hours].each  do |hour| %>
                                    <li class="time-label">
                                       <span class="bg-blue">
                                       <%= "#{hour[:time]}" %>
                                       </span>
                                    </li>
                                    <%a = true%>
                                    <% User.pays.each do |uu| %>
                                     <% @this = false %> 

	                                    <% hour[:events].each do |event| %>
	                                    	
	                                    	
	                                    	<% if event.users.include? uu %>
	                                    		<% @this = true %>
	                                    	<%end%>
		                                    	
	                                    <%end%>

	                                    <% if !@this %>
		                                    <li>
		                                       <i class="fa fa-clock-o bg-red"></i>
		                                       <div class="timeline-item">
		                                          <h3 class="timeline-header"><a href="javascript:void(0)"><%=uu.name%> </a> <span class="pull-right"><%= link_to crew_login_user_path(uu), target: "_blank", method: :patch do %><button type="button" class="btn btn-block btn-warning btn-sm" style="margin-top: -6px">Login</button> <% end %></span></h3>

		                                       </div>

		                                    </li>
	                                    <%end%>


                                    <%end%>

                                    <%end%>
                                    <li>
                                       <i class="fa fa-calendar bg-gray"></i>
                                    </li>
                                 </ul>
                              </div>
                           </div>
                        </div>
                        <%end%>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->
</section>