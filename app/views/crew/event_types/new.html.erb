<section class="content-header">
    <h1>
      Programação
    <small></small>
    </h1>
</section>
<%= form_for @event_type, url: {action: "create"} do |f| %>
<% if @event_type.errors.any? %>
<script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@crew_event.errors.count, "error") %> encontrados: </br><ul><% @event_type.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
   });
</script>
<% end %>
 <!-- Main content -->

<section class="content">
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Categoria de programação</h3>
         <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
         </div>
      </div>
      <!-- /.box-header -->

      <div class="box-body">
         <div class="row">
            <div class="col-md-12">
               <div class="form-group">
                  <label>Nome</label>
                  <%= f.text_field :name, :id => 'name', placeholder: '', class: 'form-control', autofocus: true%>
               </div>
               <!-- /.form-group -->
            </div>
            <!-- /.col -->
         </div>
         <!-- /.row -->
      </div>
      <!-- /.box-body -->
   </div>
   <!-- /.box -->
   <div class="box box-success">
      <div class="box-header with-border">
         <button type="submit" class="btn btn-block btn-success">SALVAR</button>
         <div class="box-tools pull-right">
         </div>
      </div>
   </div>
   <!-- /.box -->
</section>
         <% end %>