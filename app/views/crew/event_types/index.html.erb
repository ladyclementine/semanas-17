<section class="content-header">
   <h1>
      Programação
   </h1>
</section>
<!-- Main content -->
<section class="content">
   <!-- <section class="box"> -->
   <div class="row">
      <div class="col-xs-12">
         <div class="box">
            <div class="box-header">

               <h3 class="box-title">Gerenciamento de Categorias de eventos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
             <table class="table table-striped table-bordered dt-responsive nowrap display"  cellspacing="0" width="100%">
                  <thead>
                     <tr>
                        <th>Nome</th>
                        <th class="noExport">Opções</th>
                     </tr>
                  </thead>
                  <tbody>
                    <% @event_types.each do |event_type| %>
                    <tr>
                      <td><%= event_type.name %></td>
                      <td class="pull-right">
                        <div class="btn-group m-b-10">
                          <%= link_to edit_crew_event_type_path(event_type), class: 'btn btn-primary btn-icon waves-effect' do %>
                          <i class="fa fa-edit"></i>
                          <% end %>
                          <%= link_to crew_event_type_path(event_type), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-icon waves-effect' do %>
                          <i class="fa fa-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
               </table>
              <%= link_to(new_crew_event_type_path, class:'btn btn-primary waves-effect waves-light') do %>
            Novo Tipo de Evento <i class="fa fa-plus"></i>
            <% end %>
            </div>
         </div>
      </div>
   </div>
   <!-- </section> -->

</section>
