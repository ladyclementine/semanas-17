                  <div class="hotel-title"><%= Hotel.find(2).extra_info %></div>
               </div>
               <span style="position: absolute; margin-top: 10px; margin-left:10px " data-toggle="tooltip" title="" class="badge bg-yellow" data-original-title="3 New Messages">2° ANDAR</span>
               <span class="hotel-vagas"><%= Hotel.find(2).restant_capacity %> vagas restantes</span>
               <img src="http://opturismo.com.br/assets/img/content/hoteis/Hotel-Byblos-Saint-Tropez-foto-3.jpg" width="370" height="300" alt="">
            </div>
            <div class="content-hotel">
               <h3 class="textify_links" align="center"><a href="#" title="Single Room" target="_parent" class=""><span class="cd-headline clip">
                  <span class="cd-words-wrapper" style="font-size: 30px">
                  <b class="is-visible"> Hotel Byblos</b>
                  <b>ANDAR SUPERIOR</b>
                  </span>
                  </span>
                  </a>
               </h3>
               <div class="room-types">
               </div>
               <%= link_to rooms_path(2) do %> 
               <button type="submit" class="btn btn-sm hotel-choose" style="background-color: #1ab394; margin-bottom: 5px;color:#fff"><strong>Escolher este hotel <i class="fa fa-long-arrow-right"></i></strong></button><% end %>
            </div>
         </div>
      </div>

     


   </div>
</section>
