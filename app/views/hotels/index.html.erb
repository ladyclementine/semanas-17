<section class="content-header">
   <h1>
      Selecione o Hotel 
   </h1>
</section>
<section class="content">
   <div class="row">
      <div class="col-md-4" style="width: 370px">
         <div class="summary entry-summary dark_section">
            <div class="media">
               <div class="hotel-caption">
                  <div class="hotel-title"><%= Hotel.find(1).extra_info %></div>
               </div>
               <span style="position: absolute; margin-top: 10px; margin-left:10px " data-toggle="tooltip" title="" class="badge bg-yellow" data-original-title="3 New Messages">1° ANDAR</span>
               <span class="hotel-vagas"><%= Hotel.find(1).restant_capacity %> vagas restantes</span>
               <img src="/images/eventi/3hotelbyblos.jpg" width="370" height="300" alt="">
            </div>
            <div class="content-hotel">
               <h3 class="textify_links" align="center"><a href="#" title="Single Room" target="_parent" class=""><span class="cd-headline clip">
                  <span class="cd-words-wrapper" style="font-size: 30px">
                  <b class="is-visible"> Hotel Byblos</b>
                  <b>ANDAR INFERIOR</b>
                  </span>
                  </span>
                  </a>
               </h3>
               <div class="room-types">
               </div>
               <%= link_to rooms_path(1) do %> 
               <button type="submit" class="btn btn-sm hotel-choose" style="background-color: #1ab394; margin-bottom: 5px;color:#fff"><strong>Escolher este hotel <i class="fa fa-long-arrow-right"></i></strong></button><% end %>
            </div>
         </div>
      </div>

       <div class="col-md-4" style="width: 370px">
