<script type="text/javascript">
document.onkeyup = function(e) {

    var position = $('#navio').offset();
    var childWidth = $('#navio').width();
    var parWidth = $('.content-wrapper').width();


    var offSet = parWidth - position.left - 200;


    if (e.which === 39 && offSet > 0) {

        $('#navio').animate({
            left: '+=' + 400
        }, 1000);

    }
    if (e.which === 37 && offSet < parWidth) {

        $('#navio').animate({
            left: '-=' + 400
        }, 1000);

    }

}
</script>