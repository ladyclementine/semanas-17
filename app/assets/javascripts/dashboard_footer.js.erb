function AnimateRotate(angle) {
    var $elem = $('#navio');
    $({deg: 0}).animate({deg: angle}, {
        duration: 2000,
        complete : function(){
            setTimeout(function() {
                $('#navio').hide();
                $(".ocean").hide("slow");
            }, 2000);
        },
        step: function(now) {
            $elem.css({
                transform: 'rotate(' + now + 'deg)'
            });
            var gti = (now*-1)*200;
            $elem.animate({"top": '+='+gti+'px'});
        }
    });

}



